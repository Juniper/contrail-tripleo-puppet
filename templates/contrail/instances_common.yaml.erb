provider_config:
  bms:
    domainsuffix: local
    ssh_user: heat-admin
    ssh_private_key: "/home/{{ ssh_user }}/.ssh/id_rsa"

contrail_configuration:
  CONTROLLER_NODES: <%= @issu_ips_list_comma %>
  CONTROL_NODES: <%= @issu_control_servers_list_comma %>
  AUTH_MODE: keystone
  KEYSTONE_AUTH_REGION_NAME: <%= @keystone_region %>
  KEYSTONE_AUTH_ADMIN_TENANT: <%= @admin_tenant_name %>
  KEYSTONE_AUTH_ADMIN_USER: <%= @admin_user %>
  KEYSTONE_AUTH_ADMIN_PASSWORD: <%= @admin_password %>
  KEYSTONE_AUTH_HOST: <%= @auth_host %>
  KEYSTONE_AUTH_URL_VERSION: "<%= @auth_version_str %>"
  KEYSTONE_AUTH_USER_DOMAIN_NAME: <%= @keystone_user_domain_name %>
  KEYSTONE_AUTH_PROJECT_DOMAIN_NAME: <%= @keystone_project_domain_name %>
  IPFABRIC_SERVICE_HOST: <%= @metadata_host_ip %>
  AAA_MODE: <%= @aaa_mode %>
  METADATA_PROXY_SECRET: <%= @metadata_secret %>
  CONTRAIL_CONTAINER_TAG: <%= @container_tag %>
  OPENSTACK_VERSION: 'queens'

global_configuration:
  CONTAINER_REGISTRY: <%= @container_registry %>

kolla_config:
  kolla_globals:
    kolla_internal_vip_address: <%= @auth_host %>
    kolla_external_vip_address: <%= @auth_host %>

instances:
